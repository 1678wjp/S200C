            { length: "15", direction: "1", model: "6FX1002-2XB12-1BF0", price: 576 },
            { length: "20", direction: "1", model: "6FX1002-2XB12-1CA0", price: 678 },
            { length: "30", direction: "1", model: "6FX1002-2XB12-1DA0", price: 870 }
        ];
        
        // 初始化页面
        document.addEventListener('DOMContentLoaded', function() {
            // 设置默认选项
            document.getElementById('drive-power').value = "0.4";
            document.getElementById('motor-power').value = "400";
            document.getElementById('motor-encoder').value = "21";
            document.getElementById('motor-shaft').value = "0";
            document.getElementById('motor-brake').value = "0";
            
            // 更新选项
            updateDriveOptions();
            updateMotorOptions();
            updatePowerCableOptions();
            updateEncoderCableOptions();
            updatePrices();
        });
        
        // 更新驱动器选项
        function updateDriveOptions() {
            const power = document.getElementById('drive-power').value;
            const modelDisplay = document.getElementById('drive-model-display');
            
            if (power) {
                const selectedDrive = drives.find(d => d.power === power);
                
                if (selectedDrive) {
                    modelDisplay.textContent = `型号: ${selectedDrive.model}`;
                } else {
                    modelDisplay.textContent = '型号: -';
                }
            } else {
                modelDisplay.textContent = '型号: -';
            }
            
            // 更新电机选项（因为驱动器功率可能影响电机功率选择）
            updateMotorPowerOptions();
            updateMotorOptions();
            updatePrices();
        }
        
        // 更新电机功率选项（根据驱动器功率）
        function updateMotorPowerOptions() {
            const drivePower = parseFloat(document.getElementById('drive-power').value || "0");
            const motorPowerSelect = document.getElementById('motor-power');
            const options = motorPowerSelect.querySelectorAll('option');
            
            // 重置所有选项
            options.forEach(option => {
                option.disabled = false;
            });
            
            // 禁用大于驱动器功率的电机选项
            options.forEach(option => {
                if (option.value && parseFloat(option.value) > drivePower * 1000) {
                    option.disabled = true;
                }
            });
            
            // 如果当前选中的电机功率大于驱动器功率，则重置选择
            const currentPower = parseFloat(motorPowerSelect.value || "0");
            if (currentPower > drivePower * 1000) {
                motorPowerSelect.value = "";
            }
        }
        
        // 更新电机选项
        function updateMotorOptions() {
            const power = document.getElementById('motor-power').value;
            const encoder = document.getElementById('motor-encoder').value;
            const shaft = document.getElementById('motor-shaft').value;
            const brake = document.getElementById('motor-brake').value;
            const modelDisplay = document.getElementById('motor-model-display');
            const warning = document.getElementById('power-warning');
            
            // 检查电机功率是否小于等于驱动器功率
            const drivePower = parseFloat(document.getElementById('drive-power').value || "0");
            const motorPower = parseFloat(power || "0");
            
            if (motorPower > drivePower * 1000 && drivePower > 0) {
                warning.style.display = 'flex';
                modelDisplay.textContent = '型号: -';
            } else {
                warning.style.display = 'none';
                
                if (power) {
                    const selectedMotor = motors.find(m => 
                        m.power === power && 
                        m.encoder === encoder && 
                        m.shaft === shaft && 
                        m.brake === brake
                    );
                    
                    if (selectedMotor) {
                        modelDisplay.textContent = `型号: ${selectedMotor.model}`;
                    } else {
                        modelDisplay.textContent = '型号: -';
                    }
                } else {
                    modelDisplay.textContent = '型号: -';
                }
            }
            
            updatePrices();
        }
        
        // 更新动力线缆选项
        function updatePowerCableOptions() {
            const length = document.getElementById('power-cable-length').value;
            const direction = document.getElementById('power-cable-direction').value;
            const brake = document.getElementById('power-cable-brake').value;
            const modelDisplay = document.getElementById('power-cable-model-display');
            
            const selectedCable = powerCables.find(c => 
                c.length === length && 
                c.direction === direction && 
                c.brake === brake
            );
            
            if (selectedCable) {
                modelDisplay.textContent = `型号: ${selectedCable.model}`;
            } else {
                modelDisplay.textContent = '型号: -';
            }
            
            updatePrices();
        }
        
        // 更新编码器线缆选项
        function updateEncoderCableOptions() {
            const length = document.getElementById('encoder-cable-length').value;
            const direction = document.getElementById('encoder-cable-direction').value;
            const modelDisplay = document.getElementById('encoder-cable-model-display');
            
            const selectedCable = encoderCables.find(c => 
                c.length === length && 
                c.direction === direction
            );
            
            if (selectedCable) {
                modelDisplay.textContent = `型号: ${selectedCable.model}`;
            } else {
                modelDisplay.textContent = '型号: -';
            }
            
            updatePrices();
        }
        
        // 更新价格显示
        function updatePrices() {
            // 获取选中的驱动器
            const drivePower = document.getElementById('drive-power').value;
            const selectedDrive = drives.find(d => d.power === drivePower);
            
            // 获取选中的电机
            const motorPower = document.getElementById('motor-power').value;
            const motorEncoder = document.getElementById('motor-encoder').value;
            const motorShaft = document.getElementById('motor-shaft').value;
            const motorBrake = document.getElementById('motor-brake').value;
            const selectedMotor = motors.find(m => 
                m.power === motorPower && 
                m.encoder === motorEncoder && 
                m.shaft === motorShaft && 
                m.brake === motorBrake
            );
            
            // 获取选中的动力线缆
            const powerCableLength = document.getElementById('power-cable-length').value;
            const powerCableDirection = document.getElementById('power-cable-direction').value;
            const powerCableBrake = document.getElementById('power-cable-brake').value;
            const selectedPowerCable = powerCables.find(c => 
                c.length === powerCableLength && 
                c.direction === powerCableDirection && 
                c.brake === powerCableBrake
            );
            
            // 获取选中的编码器线缆
            const encoderCableLength = document.getElementById('encoder-cable-length').value;
            const encoderCableDirection = document.getElementById('encoder-cable-direction').value;
            const selectedEncoderCable = encoderCables.find(c => 
                c.length === encoderCableLength && 
                c.direction === encoderCableDirection
            );
            
            // 更新价格显示
            if (selectedDrive) {
                document.getElementById('drive-price').textContent = 
                    `${selectedDrive.price.toLocaleString()}`;
            } else {
                document.getElementById('drive-price').textContent = "-";
            }
            
            if (selectedMotor) {
                document.getElementById('motor-price').textContent = 
                    `${selectedMotor.price.toLocaleString()}`;
            } else {
                document.getElementById('motor-price').textContent = "-";
            }
            
            if (selectedPowerCable) {
                document.getElementById('power-cable-price').textContent = 
                    `${selectedPowerCable.price.toLocaleString()}`;
            } else {
                document.getElementById('power-cable-price').textContent = "-";
            }
            
            if (selectedEncoderCable) {
                document.getElementById('encoder-cable-price').textContent = 
                    `${selectedEncoderCable.price.toLocaleString()}`;
            } else {
                document.getElementById('encoder-cable-price').textContent = "-";
            }
            
            // 检查线缆长度是否一致
            const cableWarning = document.getElementById('cable-warning');
            if (selectedPowerCable && selectedEncoderCable && 
                selectedPowerCable.length !== selectedEncoderCable.length) {
                cableWarning.style.display = 'flex';
            } else {
                cableWarning.style.display = 'none';
            }
            
            // 更新结果表格
            updateResultTable(
                selectedDrive, 
                selectedMotor, 
                selectedPowerCable, 
                selectedEncoderCable
            );
        }
        
        // 更新结果表格
        function updateResultTable(drive, motor, powerCable, encoderCable) {
            let total = 0;
            
            // 重置表格
            document.getElementById('result-drive-model').textContent = "-";
            document.getElementById('result-drive-spec').textContent = "-";
            document.getElementById('result-drive-price').textContent = "-";
            
            document.getElementById('result-motor-model').textContent = "-";
            document.getElementById('result-motor-spec').textContent = "-";
            document.getElementById('result-motor-price').textContent = "-";
            
            document.getElementById('result-power-cable-model').textContent = "-";
            document.getElementById('result-power-cable-spec').textContent = "-";
            document.getElementById('result-power-cable-price').textContent = "-";
            
            document.getElementById('result-encoder-cable-model').textContent = "-";
            document.getElementById('result-encoder-cable-spec').textContent = "-";
            document.getElementById('result-encoder-cable-price').textContent = "-";
            
            // 更新驱动器信息
            if (drive) {
                document.getElementById('result-drive-model').textContent = drive.model;
                document.getElementById('result-drive-spec').textContent = `${drive.power} kW`;
                document.getElementById('result-drive-price').textContent = drive.price.toLocaleString();
                total += drive.price;
            }
            
            // 更新电机信息
            if (motor) {
                document.getElementById('result-motor-model').textContent = motor.model;
                const brakeText = motor.brake === "1" ? "带抱闸" : "不带抱闸";
                const shaftText = motor.shaft === "1" ? "滑键" : "光轴";
                document.getElementById('result-motor-spec').textContent = 
                    `${motor.power}W, ${motor.encoder}位, ${shaftText}, ${brakeText}`;
                document.getElementById('result-motor-price').textContent = motor.price.toLocaleString();
                total += motor.price;
            }
            
            // 更新动力线缆信息
            if (powerCable) {
                document.getElementById('result-power-cable-model').textContent = powerCable.model;
                const directionText = powerCable.direction === "1" ? "非轴端出线" : "轴端出线";
                const brakeText = powerCable.brake === "1" ? "带抱闸线" : "无抱闸线";
                document.getElementById('result-power-cable-spec').textContent = 
                    `${powerCable.length}m, ${directionText}, ${brakeText}`;
                document.getElementById('result-power-cable-price').textContent = powerCable.price.toLocaleString();
                total += powerCable.price;
            }
            
            // 更新编码器线缆信息
            if (encoderCable) {
                document.getElementById('result-encoder-cable-model').textContent = encoderCable.model;
                const directionText = encoderCable.direction === "1" ? "非轴端出线" : "轴端出线";
                document.getElementById('result-encoder-cable-spec').textContent = 
                    `${encoderCable.length}m, ${directionText}`;
                document.getElementById('result-encoder-cable-price').textContent = encoderCable.price.toLocaleString();
                total += encoderCable.price;
            }
            
            // 更新总计
            document.getElementById('total-price').textContent = total.toLocaleString();
        }
    </script>
</body>
</html>
