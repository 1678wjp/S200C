        // 编码器线缆数据
        const encoderCables = [
            // 轴端出线
            { length: "3", direction: "0", model: "6FX1002-2XB11-1AD0", price: 349 },
            { length: "5", direction: "0", model: "6FX1002-2XB11-1AF0", price: 387 },
            { length: "7", direction: "0", model: "6FX1002-2XB11-1AH0", price: 418 },
